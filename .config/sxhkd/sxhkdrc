#
# wm independent hotkeys
#

XF86AudioRaiseVolume
    amixer set Master 5%+ unmute

XF86AudioLowerVolume
    amixer set Master 5%- unmute

XF86AudioMute
    amixer set Master toggle

XF86AudioPlay
    cmus-remote -u

# XF86AudioStop
#     mpc stop

XF86AudioPrev
    cmus-remote -r

XF86AudioNext
    cmus-remote -n

XF86MonBrightnessUp
    xbacklight -inc 20%

XF86MonBrightnessDown
    xbacklight -dec 20%

XF86KbdBrightnessDown
    /usr/local/bin/kb-light.py -

XF86KbdBrightnessUp
    /usr/local/bin/kb-light.py +
    

alt + Return
	urxvt

super + Return
  rofi -rnow -show run -font "consolas 20"

ctrl + alt + super + Escape
  killall karmen