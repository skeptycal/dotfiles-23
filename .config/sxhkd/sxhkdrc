#
# wm independent hotkeys
#

XF86AudioRaiseVolume
    amixer set Master 5%+ unmute

XF86AudioLowerVolume
    amixer set Master 5%- unmute

XF86AudioMute
    amixer set Master toggle

XF86AudioPlay
    cmus-remote -u

# XF86AudioStop
#     mpc stop

XF86AudioPrev
    cmus-remote -r

XF86AudioNext
    cmus-remote -n

XF86MonBrightnessUp
    xbacklight -inc 20%

XF86MonBrightnessDown
    xbacklight -dec 20%

super + Return
	urxvt

shift + super + Return
  dmenu_run -b -nb '#002b36' -nf '#839496'  -sf black -sb darkgrey

ctrl + alt + super + Escape
  killall karmen