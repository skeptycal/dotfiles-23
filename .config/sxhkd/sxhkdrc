#
# wm independent hotkeys
#

XF86AudioRaiseVolume
    vol i

XF86AudioLowerVolume
    vol d

XF86AudioMute
    vol m

XF86AudioPlay
    cmus-remote -u

# XF86AudioStop
#     mpc stop

XF86AudioPrev
    cmus-remote -r

XF86AudioNext
    cmus-remote -n

XF86MonBrightnessUp
    xbacklight -inc 5%

XF86MonBrightnessDown
    xbacklight -dec 5%

XF86KbdBrightnessDown
    /usr/local/bin/kb-light.py -

XF86KbdBrightnessUp
    /usr/local/bin/kb-light.py +

alt + Return
	urxvt

super + Return
  open

ctrl + alt + super + Escape
  killall karmen

alt + shift + 4
  maim -s